@using Resources
@model WebLog.Core.ViewModels.AuthViewModels.SignUpParentViewModel
    

<h1>@Global.StudentData</h1>

@using (Html.BeginForm("SignUpParent", "Home", FormMethod.Post))
{

    @Html.HiddenFor(x => x.ParentId)
    <div class="form-group">
        <label>@Global.Name: </label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label>@Global.Surname: </label>
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Surname)
    </div>

    <div class="form-group">
        <label>@Global.Pesel: </label>
        @Html.TextBoxFor(x => x.Pesel, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Pesel)
    </div>


    <div class="form-group modal-header">
        <input type="submit" class="btn btn-primary" value="Register">
    </div>
}