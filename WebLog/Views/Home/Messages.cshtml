<div class="page-content" ng-app="mainModule" ng-controller="MainController">
    <div class="flex-grid no-responsive-future" style="height: 100%;">
        <div class="row" style="height: 100%">
            <div class="cell size-x200 sidebar" id="cell-sidebar">
                <ul class="sidebar">
                    <li class="mouse-pointer" ng-repeat="user in messages">
                        <a class="active" ng-click="showMessages(user.m_Item1)">
                            @*{{ user.m_Item1 }}>*@
                            <div>
                                <span class="mif-apps icon"></span>
                                <span class="counter message-user">{{ user.m_Item1 }}</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
            <div id="content-messages">
                
                <div id="Posts" class="container">
                    <div class="row">
                        <div >
                            <section >
                                <!-- First Comment -->
                                    <article class="row" ng-repeat="message in myMessages">
                                        <div>
                                            <div>
                                                <div>
                                                    <header >
                                                        <span><b>blabla</b> on</span><time ><i></i> 22222</time>
                                                    </header>
                                                    <div >
                                                        <p>
                                                           {{message}}
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </article>
                                <div  ng-if="myMessages">
                                    <h4>Leave a Comment:</h4>
                                    <div>
                                        <form ng-submit="sendMessage(newMessage)">
                                            <input type="text" ng-model="newMessage" />
                                            <input type="submit" />
                                        </form>

                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/angular");

}
