
@using Resources
<div class="cell auto-size padding20 bg-white manage-content" id="cell-content">
    <h1 class="text-light">@Global.Teachers <span class="mif-drive-eta place-right"></span></h1>
    <hr class="thin bg-grayLighter">

    <div class="manage-table">
        <table class="dataTable border bordered" data-role="datatable" data-auto-width="false">
            <thead>
                <tr>
                    <td class="sortable-column sort-asc" style="width: 100px">Imie</td>
                    <td class="sortable-column">Nazwisko</td>
                    <td class="sortable-column">Email</td>
                    <td class="sortable-column">Liczba przedmiotów</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="teacher in teachers">
                    <td>{{teacher.Name}}</td>
                    <td>{{teacher.Surname}}</td>
                    <td>{{teacher.Email}}</td>
                    <td>{{teacher.Subjects.length}}</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>