@using Resources
@model WebLog.Core.ViewModels.TestsViewModels.TestDetailViewModel
    
<div class="col-sm-4">

    @using (Html.BeginForm("Detail", "Test", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            <label>@Global.Name: </label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            <label>@Global.Surname: </label>
            @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Time)
        </div>


        <div class="form-group modal-header">
            <input type="submit" class="btn btn-primary" value="@Global.Update">
        </div>
    }
</div>

<div class="col-sm-8">
    @foreach (var question in Model.Questions)
    {
        <a class="row">@question.Text</a>
    }
   
    
</div>