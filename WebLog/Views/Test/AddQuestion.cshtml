@using Resources
@model WebLog.Core.ViewModels.TestsViewModels.NewQuestionViewModel

@using (Html.BeginForm("AddQuestion", "Test", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TestId)

    <div class="form-group">
        <label>@Global.Question: </label>
        @Html.TextBoxFor(x => x.QuestionText, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.QuestionText)
    </div>

    <div class="form-group">
        <label>@Global.Answers: </label>
        @Html.TextAreaFor(x => x.Answer1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Answer1)
    </div>

    <div class="form-group">
        @Html.TextAreaFor(x => x.Answer2, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Answer2)
    </div>

    <div class="form-group">
        @Html.TextAreaFor(x => x.Answer3, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Answer3)
    </div>

    <div class="form-group">
        <label>@Global.CorrectAnswer: </label>
        @Html.TextBoxFor(x => x.CorrectAnswer, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CorrectAnswer)
    </div>

    <div class="form-group">
        <label>@Global.Points: </label>
        @Html.TextBoxFor(x => x.Points, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Points)
    </div>

    <div class="form-group modal-header">
        <input type="submit" class="btn btn-primary" value="@Global.Add">
    </div>
}
