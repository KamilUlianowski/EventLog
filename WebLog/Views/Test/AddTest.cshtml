@using Resources
@model WebLog.Core.ViewModels.TestsViewModels.NewTestViewModel

@using (Html.BeginForm("AddTest", "Test", FormMethod.Post))
{
    <div>
        @Html.TextBoxFor(x => x.Name, new { @class = "input-signin", @placeholder = @Global.NameOfTest })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div>
        @Html.TextBoxFor(x => x.Time, new { @class = "input-signin", @placeholder = @Global.TimeOfTest })
        @Html.ValidationMessageFor(x => x.Time)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(model => model.SelectedSubject, Model.Subjects, new { @class = "form-control" })

    </div>

        <div>
            <div>
                <input type="submit" id="submit-signin" value="@Global.AddTest">
            </div>

        </div>
}